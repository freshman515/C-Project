<UserControl x:Class="ScadaSystem.Usc.Dialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScadaSystem.Usc"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mapp="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="200"
             Background="White"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition  />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Height="30" VerticalAlignment="Top" Background="LightBlue">
            <TextBlock Margin="10,0,0,0" FontWeight="Bold" FontFamily="Microsoft Yahei" Text="提示" FontSize="15" VerticalAlignment="Center" />
        </Border>

        <TextBlock x:Name="TextBlock"
                   Grid.Row="1"
                   Margin="15"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap" />
        <StackPanel x:Name="stackPanelOk"
                    Grid.Row="2"
                    Visibility="Collapsed">
            <Button Margin="15"
                    HorizontalAlignment="Center"
                    Height="40"
                    Width="100"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Style="{StaticResource ButtonStyle}"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    Content="OK"
                    IsCancel="True" />
        </StackPanel>
        <StackPanel x:Name="stackPanelYesOrNo"
                    Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <Button Margin="15"
                    HorizontalAlignment="Center"
                    Height="40"
                    Width="100"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Style="{StaticResource ButtonStyle}"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    Content="Yes"
                    IsDefault="True"
                    IsCancel="True">
                <Button.CommandParameter>
                    <system:Boolean>True</system:Boolean>
                </Button.CommandParameter> 
            </Button>
            <Button Margin="15"
                    HorizontalAlignment="Center"
                    Height="40"
                    Width="100"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Style="{StaticResource ButtonStyle}"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    Content="No"
                    IsDefault="False"
                    IsCancel="True">
                <Button.CommandParameter>
                    <system:Boolean>False</system:Boolean>
                </Button.CommandParameter>
            </Button> 
        </StackPanel>
    </Grid>
</UserControl>
