<UserControl x:Class="MyToDo.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyToDo.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:pass="clr-namespace:MyToDo.Extensins"
             Width="600"
             Height="350">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Height"
                    Value="350" />
            <Setter Property="Width"
                    Value="600" />
            <Setter Property="SizeToContent"
                    Value="WidthAndHeight" />
            <Setter Property="ResizeMode"
                    Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation"
                    Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Source="/Images/login.png"
               Margin="40" />
        <md:Snackbar x:Name="LoginSnackbar"
                      MessageQueue="{md:MessageQueue}"
                     Grid.ColumnSpan="2"
                     VerticalAlignment="Top"
                     Panel.ZIndex="1" />
        <md:Transitioner Grid.Column="1"
                         SelectedIndex="{Binding SelectedIndex}">
            <md:TransitionerSlide>
                <DockPanel LastChildFill="False"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Margin="20,0">
                    <TextBlock Text="欢迎使用"
                               FontWeight="Bold"
                               DockPanel.Dock="Top"
                               FontSize="30" />

                    <TextBox DockPanel.Dock="Top"
                             Height="50"
                             FontSize="16"
                             Text="{Binding LoginUserDto.Account}"
                             Margin="0,10"
                             md:HintAssist.Hint="请输入账号" />
                    <PasswordBox DockPanel.Dock="Top"
                                 Height="50"
                                 pass:PassWordExtension.PassWord="{Binding LoginUserDto.Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 Margin="0,10"
                                 md:HintAssist.Hint="请输入密码">
                        <i:Interaction.Behaviors>
                            <pass:PasswordBehavior />
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <Border DockPanel.Dock="Top"
                            Margin="0,10,0,10"
                            CornerRadius="10">
                        <Button Content="登录系统"
                                Command="{Binding ExecuteCommand}"
                                CommandParameter="Login"
                                Height="40">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                          Content="{TemplateBinding Content}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Border>
                    <DockPanel DockPanel.Dock="Top"
                               LastChildFill="False">
                        <TextBlock Text="注册账号"
                                   Foreground="Black"
                                   DockPanel.Dock="Left">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding ExecuteCommand}"
                                                           CommandParameter="Go" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                        <TextBlock Text="忘记密码"
                                   DockPanel.Dock="Right" />
                    </DockPanel>
                </DockPanel>
            </md:TransitionerSlide>
            <md:TransitionerSlide>
                <DockPanel VerticalAlignment="Center"
                           LastChildFill="False"
                           Margin="15">
                    <TextBlock Text="注册账号"
                               FontWeight="Bold"
                               DockPanel.Dock="Top"
                               FontSize="25" />
                    <TextBox DockPanel.Dock="Top"
                             FontSize="16"
                             Text="{Binding UserDto.Name}"
                             Margin="0,10"
                             md:HintAssist.Hint="请输入用户名" />
                    <TextBox DockPanel.Dock="Top"
                             FontSize="16"
                             Text="{Binding UserDto.Account}"
                             Margin="0,10"
                             md:HintAssist.Hint="请输入账号" />
                    <PasswordBox DockPanel.Dock="Top"
                                 Height="40"
                                 pass:PassWordExtension.PassWord="{Binding UserDto.Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 Margin="0,0"
                                 md:HintAssist.Hint="请输入密码">
                        <i:Interaction.Behaviors>
                            <pass:PasswordBehavior />
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <PasswordBox DockPanel.Dock="Top"
                                 Height="40"
                                 pass:PassWordExtension.PassWord="{Binding UserDto.NewPassword,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 Margin="0,0"
                                 md:HintAssist.Hint="请再次输入密码">
                        <i:Interaction.Behaviors>
                            <pass:PasswordBehavior />
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <Button Content="注册账号"
                            DockPanel.Dock="Left"
                            Command="{Binding ExecuteCommand}"
                            CommandParameter="Register"
                            Margin="0,5"
                            Height="40" />
                    <Button Content="返回登录"
                            Command="{Binding ExecuteCommand}"
                            Margin="0,5"
                            DockPanel.Dock="Right"
                            CommandParameter="Return"
                            Height="40" />
                </DockPanel>
            </md:TransitionerSlide>
        </md:Transitioner>
    </Grid>
</UserControl>
