<UserControl x:Class="ScadaSystem.Views.IndexView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScadaSystem.Views"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:ScadaSystem.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:usc="clr-namespace:ScadaSystem.Usc"
             d:DataContext="{d:DesignInstance vm:IndexViewModel}"
             Background="{DynamicResource MaterialDesign.Brush.Background}"
             FontFamily="Microsoft YaHei"
             FontSize="16"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             d:DesignHeight="850"
             d:DesignWidth="1200">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/bg.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0"
                BorderBrush="#87cebb"
                BorderThickness="0,0,0,1"
                Grid.ColumnSpan="3" />
        <!--温湿度-->
        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,5,0,0"
                    TextElement.FontSize="20">
            <StackPanel  Orientation="Horizontal">
                <md:PackIcon Width="20"
                             Height="20"
                             Margin="0,0,5,0"
                             VerticalAlignment="Center"
                             Foreground="White"
                             Background="Transparent"
                             Kind="TemperatureCentigrade" />
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,5,0"
                           Foreground="White"
                           Text="厂房温度：" />
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Text="25" />
            </StackPanel>
            <StackPanel  Orientation="Horizontal">
                <md:PackIcon Width="20"
                             Height="20"
                             Margin="0,0,5,0"
                             VerticalAlignment="Center"
                             Foreground="White"
                             Background="Transparent"
                             Kind="Humidity" />
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,5,0"
                           Foreground="White"
                           Text="厂房湿度：" />
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Text="65" />
            </StackPanel>
        </StackPanel>
        <!--中央看板文字-->
        <StackPanel Grid.Row="0"
                    Grid.Column="1">
            <TextBlock Margin="10,15"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       Text="喷涂工艺SCADA系统" />
        </StackPanel>
        <!--系统状态-->
        <StackPanel Grid.Row="0"
                    Grid.Column="2">

            <StackPanel  Orientation="Horizontal"
                         HorizontalAlignment="Right"
                         Margin="0,11,0,0">
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,5,0"
                           Foreground="White"
                           Text="系统状态：" />
                <md:PackIcon Width="20"
                             Height="20"
                             Margin="0,0,5,0"
                             VerticalAlignment="Center"
                             Foreground="Green"
                             Background="Transparent"
                             Kind="AlarmLight" />
            </StackPanel>
            <StackPanel  Orientation="Horizontal"
                         HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,5,0"
                           Foreground="White"
                           Text="连接状态：" />
                <md:PackIcon Width="20"
                             Height="20"
                             Margin="0,0,5,0"
                             VerticalAlignment="Center"
                             Foreground="Red"
                             Background="Transparent"
                             Kind="Aed" />
            </StackPanel>
        </StackPanel>
        <!--左侧状态工位-->
        <Grid Grid.Row="1"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderBrush="#87cebb"
                    Margin="2,5,0,0"
                    BorderThickness="1">
                <StackPanel TextElement.Foreground="White">
                    <TextBlock Text="脱脂工位"
                               FontSize="20"
                               HorizontalAlignment="Center" />
                    <usc:StatusIndicatorContorl ButtonBackground="Green"
                                                IsIndeterminate="True"
                                                StatusText="脱脂喷淋泵运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="脱脂排风扇运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="脱脂低液位运行状态" />
                </StackPanel>
            </Border>
            <Border BorderBrush="#87cebb"
                    Margin="2,5,0,0"
                    Grid.Row="1"
                    BorderThickness="1">
                <StackPanel TextElement.Foreground="White">
                    <TextBlock Text="粗洗工位"
                               FontSize="20"
                               HorizontalAlignment="Center" />
                    <usc:StatusIndicatorContorl ButtonBackground="Green"
                                                IsIndeterminate="True"
                                                StatusText="粗铣喷淋泵运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="粗洗喷淋泵过载状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="粗洗喷淋泵低液位报警" />
                </StackPanel>
            </Border>
            <Border Grid.Row="2"
                    Margin="2,5,0,0"
                    BorderBrush="#87cebb"
                    BorderThickness="1">
                <StackPanel TextElement.Foreground="White">
                    <TextBlock Text="陶化工位"
                               FontSize="20"
                               HorizontalAlignment="Center" />
                    <usc:StatusIndicatorContorl ButtonBackground="Green"
                                                IsIndeterminate="True"
                                                StatusText="陶化喷淋泵运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="陶化排风扇运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="陶化喷淋泵过载状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="陶化低液位运行状态" />
                </StackPanel>
            </Border>
            <Border BorderBrush="#87cebb"
                    Margin="2,5,0,0"
                    Grid.Row="3"
                    BorderThickness="1">
                <StackPanel TextElement.Foreground="White">
                    <TextBlock Text="精洗工位"
                               FontSize="20"
                               HorizontalAlignment="Center" />
                    <usc:StatusIndicatorContorl ButtonBackground="Green"
                                                IsIndeterminate="True"
                                                StatusText="精洗喷淋泵运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="精洗排风扇运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="精洗低液位运行状态" />
                </StackPanel>
            </Border>
        </Grid>
        <!--右侧状态工位-->
        <Grid Grid.Row="1"
              Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderBrush="#87cebb"
                    Margin="2,5,0,0"
                    BorderThickness="1">
                <StackPanel TextElement.Foreground="White">
                    <TextBlock Text="水分炉工位"
                               FontSize="20"
                               HorizontalAlignment="Center" />
                    <usc:StatusIndicatorContorl ButtonBackground="Green"
                                                IsIndeterminate="True"
                                                StatusText="水分炉变频器运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="水分炉风机运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="水分炉温度报警" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="水分炉煤气报警" />
                </StackPanel>
            </Border>
            <Border BorderBrush="#87cebb"
                    Margin="2,5,0,0"
                    Grid.Row="1"
                    BorderThickness="1">
                <StackPanel TextElement.Foreground="White">
                    <TextBlock Text="固化炉工位"
                               FontSize="20"
                               HorizontalAlignment="Center" />
                    <usc:StatusIndicatorContorl ButtonBackground="Green"
                                                IsIndeterminate="True"
                                                StatusText="固化炉变频器运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="固体炉风机运行状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="固化炉燃烧机状态" />
                    <usc:StatusIndicatorContorl ButtonBackground="Red"
                                                IsIndeterminate="False"
                                                StatusText="固化炉泄漏报警" />
                </StackPanel>
            </Border>
            <Border Grid.Row="2"
                    Margin="2,5,0,0"
                    BorderBrush="#87cebb"
                    BorderThickness="1">
                <StackPanel TextElement.Foreground="White">
                    <TextBlock Text="参数监控"
                               FontSize="20"
                               Margin="0,5"
                               HorizontalAlignment="Center" />
                    <UniformGrid>
                        <StackPanel Margin="0,0,5,0">
                            <Button Height="50"
                                    md:ButtonAssist.CornerRadius="25 25 0 0"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="MaterialDesignRaisedSecondaryButton with Round Top Corners">
                                <TextBlock Text="25/50 Radius" />
                            </Button>
                            <TextBlock Text="脱脂压力值" HorizontalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Margin="0,0,5,0">
                            <Button Height="50"
                                    md:ButtonAssist.CornerRadius="25 25 0 0"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="MaterialDesignRaisedSecondaryButton with Round Top Corners">
                                <TextBlock Text="25/50 Radius" />
                            </Button>
                            <TextBlock Text="脱脂PH值" HorizontalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Margin="0,0,5,0">
                            <Button Height="50"
                                    md:ButtonAssist.CornerRadius="25 25 0 0"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="MaterialDesignRaisedSecondaryButton with Round Top Corners">
                                <TextBlock Text="25/50 Radius" />
                            </Button>
                            <TextBlock Text="粗洗压力值"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Margin="0,0,5,0">
                            <Button Height="50"
                                    md:ButtonAssist.CornerRadius="25 25 0 0"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="MaterialDesignRaisedSecondaryButton with Round Top Corners">
                                <TextBlock Text="25/50 Radius" />
                            </Button>
                            <TextBlock Text="陶化压力值"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Margin="0,0,5,0">
                            <Button Height="50"
                                    md:ButtonAssist.CornerRadius="25 25 0 0"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="MaterialDesignRaisedSecondaryButton with Round Top Corners">
                                <TextBlock Text="25/50 Radius" />
                            </Button>
                            <TextBlock Text="陶化PH值"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Margin="0,0,5,0">
                            <Button Height="50"
                                    md:ButtonAssist.CornerRadius="25 25 0 0"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="MaterialDesignRaisedSecondaryButton with Round Top Corners">
                                <TextBlock Text="25/50 Radius" />
                            </Button>
                            <TextBlock Text="水分炉温度值"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </UniformGrid>
                   
                </StackPanel>
            </Border>
        </Grid>
        <!--中央产线信息-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>
            <Border  BorderBrush="#87cebb"
                     Margin="2,5,0,0"
                     BorderThickness="1">
                <Grid TextElement.Foreground="white" TextElement.FontSize="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Margin="2,0,0,0"
                            BorderBrush="#87cebb"
                            BorderThickness="1"
                            Grid.Column="0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="计划产量" Margin="0,5" />
                            <TextBlock Text="500"
                                       TextAlignment="Center"
                                       Margin="0,5" />
                        </StackPanel>
                        
                    </Border>

                    <Border Grid.Row="0"
                            Margin="2,0,0,0"
                            BorderBrush="#87cebb"
                            BorderThickness="1"
                            Grid.Column="0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="计划产量" Margin="0,5" />
                            <TextBlock Text="500"
                                       TextAlignment="Center"
                                       Margin="0,5" />
                        </StackPanel>
                        
                    </Border>

                    <Border Grid.Row="0"
                            Margin="2,0,0,0"
                            BorderBrush="#87cebb"
                            BorderThickness="1"
                            Grid.Column="1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="实际产量" Margin="0,5" />
                            <TextBlock Text="500"
                                       TextAlignment="Center"
                                       Margin="0,5" />
                        </StackPanel>
                        
                    </Border>

                    <Border Grid.Row="0"
                            Margin="2,0,0,0"
                            BorderBrush="#87cebb"
                            BorderThickness="1"
                            Grid.Column="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="不良计数" Margin="0,5" />
                            <TextBlock Text="500"
                                       TextAlignment="Center"
                                       Margin="0,5" />
                        </StackPanel>
                        
                    </Border>

                    <Border Grid.Row="1"
                            Margin="2,0,0,0"
                            BorderBrush="#87cebb"
                            BorderThickness="1"
                            Grid.Column="0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="生产节拍" Margin="0,5" />
                            <TextBlock Text="500"
                                       TextAlignment="Center"
                                       Margin="0,5" />
                        </StackPanel>
                        
                    </Border>
                    <Border Grid.Row="1"
                            Margin="2,0,0,0"
                            BorderBrush="#87cebb"
                            BorderThickness="1"
                            Grid.Column="1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="累计报警" Margin="0,5" />
                            <TextBlock Text="500"
                                       TextAlignment="Center"
                                       Margin="0,5" />
                        </StackPanel>
                        
                    </Border>
                    <Border Grid.Row="1"
                            Margin="2,0,0,0"
                            BorderBrush="#87cebb"
                            BorderThickness="1"
                            Grid.Column="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="累计产量"  Margin="0,5" />
                            <TextBlock Text="500" TextAlignment="Center" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </Grid> 
            </Border>
            <Border Grid.Row="1" BorderBrush="#87ceeb" BorderThickness="1" Margin="2,5,0,0">
                <Image Source="/Images/pt.gif" Stretch="Fill" />

            </Border>
        </Grid>
    </Grid>
</UserControl>
