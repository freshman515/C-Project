<UserControl x:Class="ScadaSystem.Views.FormulaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="http://schemas.superdev.ch/valueconverters/2016/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ScadaSystem.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ScadaSystem.ViewModels"
             d:DataContext="{d:DesignInstance vm:FormulaViewModel}"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesign.Brush.Background}"
             FontFamily="Microsoft YaHei"
             FontSize="16"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <c:BoolToStringConverter x:Key="BoolToBg"
                                 FalseValue="white"
                                 TrueValue="#E3F2FD" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                BorderBrush="#546e7a"
                BorderThickness="1">
            <StackPanel Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button Width="120"
                        Height="35"
                        Margin="10,5,5,5"
                        Command="{Binding QueryFormulaCommand}"
                        Content="查询配方"
                        Style="{StaticResource ButtonStyle}" />

                <Button Width="120"
                        Height="35"
                        Margin="10,5,5,5"
                        Command="{Binding NewFormulaCommand}"
                        Content="新建配方"
                        Style="{StaticResource ButtonStyle}" />
                <Button Width="120"
                        Height="35"
                        Margin="10,5,5,5"
                        Command="{Binding SaveFormulaCommand}"
                        Content="保存配方"
                        Style="{StaticResource ButtonStyle}" />
                <Button Width="120"
                        Height="35"
                        Margin="10,5,5,5"
                        Command="{Binding DeleteFormulaCommand}"
                        Content="删除配方"
                        Style="{StaticResource ButtonStyle}" />
                <Button Width="120"
                        Height="35"
                        Margin="10,5,5,5"
                        Command="{Binding DownloadFormulaCommand}"
                        Content="下载配方"
                        Style="{StaticResource ButtonStyle}" />
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0">
                <ItemsControl Margin="5"
                              ItemsSource="{Binding FormulaList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <md:Card Margin="0,0,0,10"
                                     Background="{Binding IsSelected, Converter={StaticResource BoolToBg}}"
                                     Cursor="Hand"
                                     UniformCornerRadius="8">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.SelectedCommand}"
                                                               CommandParameter="{Binding}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--  配方图标  -->
                                    <md:PackIcon Width="80"
                                                 Height="80"
                                                 Margin="20"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Kind="FileDocument" />
                                    <StackPanel Grid.Column="1"
                                                Margin="8"
                                                VerticalAlignment="Center">
                                        <TextBlock FontSize="18"
                                                   FontWeight="Bold"
                                                   Text="{Binding Name}"
                                                   TextAlignment="Left" />
                                        <TextBlock FontSize="18"
                                                   FontWeight="Bold"
                                                   Text="{Binding Description}"
                                                   TextAlignment="Left"
                                                   TextWrapping="Wrap" />
                                        <TextBlock FontSize="18"
                                                   FontWeight="Bold"
                                                   Text="{Binding CreateTime}"
                                                   TextAlignment="Left" />
                                    </StackPanel>
                                </Grid>
                            </md:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>
            <Border Grid.Column="1"
                    BorderBrush="#546e7a"
                    BorderThickness="1">
                <StackPanel>
                    <StackPanel HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Margin="10"
                                   Text="配方名称" />
                        <TextBox Width="150"
                                 Margin="10"
                                 VerticalAlignment="Top"
                                 Text="{Binding CurrentFormula.Name}" />
                        <TextBlock Margin="10"
                                   Text="配方描述" />
                        <TextBox Width="180"
                                 Margin="10,20"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Top"
                                 Text="{Binding CurrentFormula.Description}" />
                    </StackPanel>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="脱脂设定压力上限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.DegreasingSetPressureUpperLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="脱脂设定压力下限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.DegreasingSetPressureLowerLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10"
                                       Text="粗洗喷淋泵过载上限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.RoughWashingSprayPumpOverloadUpperLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="粗洗液位下限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.RoughWashingLevelLowerLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="陶化喷淋泵过载上限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.CeramicCoatingSprayPumpOverloadUpperLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="精洗喷淋泵过载上限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.FineWashingSprayPumpOverloadUpperLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="精洗液位下限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.FineWashingLevelLowerLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="水分炉温度上限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.MoistureFurnaceTemperatureUpperLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="水分炉温度下限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.MoistureFurnaceTemperatureLowerLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10"
                                       Text="冷却室离心风机过载上限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.CoolingRoomCentrifugalFanOverloadUpperLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="固化炉温度上限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.CuringOvenTemperatureUpperLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="固化炉温度下限值" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.CuringOvenTemperatureLowerLimit}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="输送机设定速度" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.ConveyorSetSpeed}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Width="180"
                                       Margin="10,20"
                                       Text="输送机设定频率" />
                            <TextBox Width="150"
                                     Margin="10,20"
                                     Text="{Binding CurrentFormula.ConveyorSetFrequency}" />
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>
