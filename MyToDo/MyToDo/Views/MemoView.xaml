<UserControl x:Class="MyToDo.Views.MemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyToDo.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cv="clr-namespace:MyToDo.Common.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <cv:IntToVisibilityConverter x:Key="IntToVisibility" />
    </UserControl.Resources>

    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsRightDrawerOpen}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300"
                           Margin="15,15,0,0"
                           LastChildFill="False">
                    <TextBlock Text="添加备忘录"
                               FontSize="20"
                               FontWeight="Bold"
                               DockPanel.Dock="Top" />
                    <TextBox md:HintAssist.Hint="请输入备忘录概要"
                             Text="{Binding CurrentDto.Title}"
                             Margin="0,10,0,0"
                             DockPanel.Dock="Top" />
                    <TextBox md:HintAssist.Hint="请输入备忘录内容"
                             Text="{Binding CurrentDto.Content}"
                             Margin="0,10,0,0"
                             DockPanel.Dock="Top" />
                    <Button Content="添加到备忘录"
                            Command="{Binding ExecuteCommand}"
                            CommandParameter="保存"
                            DockPanel.Dock="Top" />
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Margin="10,0"
                            Orientation="Horizontal">
                    <TextBox Width="250"
                             VerticalAlignment="Center"
                             md:HintAssist.Hint="查找备忘录"
                             Text="{Binding SearchText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             md:TextFieldAssist.HasClearButton="True">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter"
                                        Command="{Binding ExecuteCommand}"
                                        CommandParameter="查询"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>
                <Button Content="+ 添加备忘录"
                        Command="{Binding ExecuteCommand}"
                        CommandParameter="新增"
                        HorizontalAlignment="Right"
                        Margin="10,5" />
                <StackPanel Grid.Row="1" Margin="0,10" VerticalAlignment="Center"
                            Visibility="{Binding MemoDtos.Count ,Converter ={StaticResource IntToVisibility}}">
                    <Image Source="/Images/wind.png" Width="120" Height="120" />

                    <TextBlock Margin="0,10"
                               HorizontalAlignment="Center"
                               Text="暂无任何备忘录，尝试添加一些吧~"
                               FontSize="24" />
                </StackPanel>
                <ScrollViewer Grid.Row="1">

                    <ItemsControl HorizontalAlignment="Center"
                                  ItemsSource="{Binding MemoDtos}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Grid Width="220"
                                          MinHeight="180"
                                          Margin="8"
                                          MaxHeight="250">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                                <i:InvokeCommandAction Command="{Binding DataContext.SelectedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                       CommandParameter="{Binding}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="10"
                                                                                  Color="#DDDDDD"
                                                                                  ShadowDepth="1"
                                                                                  Opacity="1" />
                                                            </Setter.Value>
                                                                
                                                        </Setter> 
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Border CornerRadius="3"
                                                Background="#66CCFF"
                                                Grid.RowSpan="2" />

                                        <TextBlock Margin="10,5"
                                                   FontWeight="Bold"
                                                   Text="{Binding Title}" />
                                        <TextBlock Margin="10,5"
                                                   Text="{Binding Content}"
                                                   Grid.Row="1" />

                                        <Canvas ClipToBounds="True"
                                                Grid.RowSpan="2">
                                            <Border Canvas.Top="15"
                                                    Canvas.Right="-50"
                                                    CornerRadius="100"
                                                    Width="120"
                                                    Height="120"
                                                    Background="#ffffff"
                                                    Opacity="0.1">
                                            </Border>
                                            <Border Canvas.Top="80"
                                                    CornerRadius="100"
                                                    Canvas.Right="-30"
                                                    Width="120"
                                                    Height="120"
                                                    Background="#ffffff"
                                                    Opacity="0.1">
                                            </Border>
                                        </Canvas>
                                        <md:PopupBox HorizontalAlignment="Right">
                                            <Button Content="删除"
                                                    Command="{Binding DataContext.DeletedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}"/>
                                        </md:PopupBox>
                                    </Grid>

                                </md:TransitioningContent>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>
