<UserControl
    x:Class="ScadaSystem.Views.DataQueryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ScadaSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:ScadaSystem.ViewModels"
    d:DataContext="{d:DesignInstance vm:DataQueryViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesign.Brush.Background}"
    FontFamily="Microsoft YaHei"
    FontSize="16"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="12*" />
            <RowDefinition Height="0.8*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Margin="5" Content="开始日期:" />
                <DatePicker
                    Width="120"
                    Margin="5"
                    md:HintAssist.Hint="StartDate"
                    md:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                <Label Margin="5" Content="结束日期:" />
                <DatePicker
                    Width="120"
                    Margin="5"
                    md:HintAssist.Hint="EndDate"
                    md:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                <Button
                    Width="100"
                    Margin="5"
                    Content="重置查询"
                    Style="{DynamicResource ButtonStyle}" />
                <Button
                    Width="100"
                    Margin="5"
                    Content="查询数据"
                    Style="{DynamicResource ButtonStyle}" />
                <Button
                    Width="100"
                    Margin="5"
                    Content="导出分页"
                    Style="{DynamicResource ButtonStyle}" />

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5"
                    Content="导出全部"
                    Style="{DynamicResource ButtonStyle}" />
                <Button
                    Width="100"
                    Margin="5"
                    Content="导出报表"
                    Style="{DynamicResource ButtonStyle}" />
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
