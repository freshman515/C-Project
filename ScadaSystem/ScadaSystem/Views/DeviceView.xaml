<UserControl
    x:Class="ScadaSystem.Views.DeviceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ScadaSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:ScadaSystem.ViewModels"
    d:DataContext="{d:DesignInstance vm:DeviceViewModel}"
    Background="{DynamicResource MaterialDesign.Brush.Background}"
    FontFamily="Microsoft YaHei"
    FontSize="16"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Border Background="#034572">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="产线总控制" />
        </Border>
        <Border
            Grid.Row="1"
            BorderBrush="DarkSlateBlue"
            BorderThickness="1">
            <UniformGrid Rows="1">
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    md:ButtonProgressAssist.IsIndeterminate="True"
                    md:ButtonProgressAssist.IsIndicatorVisible="True"
                    Background="LimeGreen"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="TotalStart"
                    Content="总启动"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    md:ButtonProgressAssist.IsIndeterminate="True"
                    md:ButtonProgressAssist.IsIndicatorVisible="True"
                    Background="Red"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="TotalStop"
                    Content="总停止"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    md:ButtonProgressAssist.IsIndeterminate="True"
                    md:ButtonProgressAssist.IsIndicatorVisible="True"
                    Background="#50a0ff"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="MechanicalReset"
                    Content="机械复位"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    md:ButtonProgressAssist.IsIndeterminate="True"
                    md:ButtonProgressAssist.IsIndicatorVisible="True"
                    Background="#febf57"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="AlarmReset"
                    Content="报警复位"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="100"
                    Margin="10"
                    md:ButtonProgressAssist.IsIndeterminate="True"
                    md:ButtonProgressAssist.IsIndicatorVisible="True"
                    Background="#414141"
                    Command="{Binding WriteDeviceControlCommand}"
                    CommandParameter="IdleRun"
                    Content="空体运行"
                    FontSize="40" />
            </UniformGrid>


        </Border>
        <Border
            Grid.Row="2"
            BorderBrush="DarkSlateBlue"
            BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="0"
                    BorderBrush="DarkSlateBlue"
                    BorderThickness="1">
                    <UniformGrid Columns="1" Rows="4">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="脱脂工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                    IsChecked="{Binding RootParam.PlcParam.DegreasingStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="脱脂工位">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="DegreasingStationOpen" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="DegreasingStationClose" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </StackPanel>
                            <Rectangle Width="60" />
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="100"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="冷却室工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                              IsChecked="{Binding RootParam.PlcParam.CuringOvenStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="水分炉工位开关">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="CoolingRoomStationOpen"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="CoolingRoomStationClose"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="粗洗工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                              IsChecked="{Binding RootParam.PlcParam.RoughWashingStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="粗洗工位开关">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="RoughWashingStationOpen" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="RoughWashingStationClose" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </StackPanel>
                            <Rectangle Width="60" />
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="100"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="水分炉工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                              IsChecked="{Binding RootParam.PlcParam.MoistureFurnaceStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="自动模拟开关">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="MoistureFurnaceStationOpen" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="MoistureFurnaceStationClose" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="陶化工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                              IsChecked="{Binding RootParam.PlcParam.CeramicCoatingStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="自动采集开关">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="CeramicCoatingStationOpen"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="CeramicCoatingStationClose"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </StackPanel>
                            <Rectangle Width="60" />
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="100"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="固化炉工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                              IsChecked="{Binding RootParam.PlcParam.CuringOvenStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="自动模拟开关">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="CuringOvenStationOpen" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="CuringOvenStationClose" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="80"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="精洗工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                              IsChecked="{Binding RootParam.PlcParam.FineWashingStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="自动采集开关">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="FineWashingStationOpen" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="FineWashingStationOpen" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </StackPanel>
                            <Rectangle Width="60" />
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Width="100"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="输送机工位："
                                    Foreground="#1b2755" />
                                <ToggleButton
                                    Width="80"
                                    Margin="2"
                                              IsChecked="{Binding RootParam.PlcParam.ConveyorStationOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="自动模拟开关">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="ConveyorStationOpen" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}"
                                                                   CommandParameter="ConveyorStationClose" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>

                                </ToggleButton>
                            </StackPanel>

                        </StackPanel>
                    </UniformGrid>
                </Border>
                <GroupBox
                    Grid.Column="1"
                    BorderBrush="DarkSlateBlue"
                    BorderThickness="1"
                    Header="日志文件">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding ClearLogCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ScrollViewer VerticalScrollBarVisibility="auto">
                        <TextBlock
                            FontSize="17"
                            Foreground="Black"
                            Text="{Binding LogContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </GroupBox>
            </Grid>

        </Border>
    </Grid>
</UserControl>
