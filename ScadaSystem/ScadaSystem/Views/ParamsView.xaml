<UserControl x:Class="ScadaSystem.Views.ParamsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScadaSystem.Views"
             xmlns:vm="clr-namespace:ScadaSystem.ViewModels"
             xmlns:helper="clr-namespace:ScadaSystem.Helper"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance vm:ParamsViewModel}"
             Background="{DynamicResource MaterialDesign.Brush.Background}"
             FontFamily="Microsoft YaHei"
             FontSize="16"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#546e7a"
                BorderThickness="2">
            <StackPanel>
                <Button Content="保存参数"
                        Style="{DynamicResource ButtonStyle}" />
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10,10,30,10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="PLC地址："
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <TextBox HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Width="120"
                                 Margin="2"
                                 Text="{Binding RootParam.PlcParam.PlcIp}" />
                    </StackPanel>
                    <StackPanel Margin="10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="PLC类型："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <TextBox HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Width="120"
                                 Margin="2"
                                 Text="{Binding RootParam.PlcParam.PlcType}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10,10,30,10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="端口号："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <TextBox HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Width="120"
                                 Margin="2"
                                 Text="{Binding RootParam.PlcParam.PlcPort}" />
                    </StackPanel>
                    <StackPanel Margin="10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="超时时间："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <TextBox HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Width="120"
                                 Margin="2"
                                 Text="{Binding RootParam.PlcParam.PlcConnectTimeOut}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10,10,30,10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="读取间隔："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <TextBox HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Width="120"
                                 Margin="2"
                                 Text="{Binding RootParam.PlcParam.PlcCycleInterval}" />
                    </StackPanel>


                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="自动采集："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <ToggleButton Margin="2"
                                      ToolTip="自动采集开关"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding RootParam.PlcParam.AutoCollect,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Width="80">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding ToggleCollectionCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ToggleButton>
                    </StackPanel>
                    <Rectangle Width="60" />
                    <StackPanel Margin="10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="自动模拟："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <ToggleButton Margin="2"
                                      ToolTip="自动模拟开关"
                                      IsChecked="{Binding RootParam.PlcParam.AutoMock ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      Width="80">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding ToggleMockCommand}" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding ToggleMockCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ToggleButton> 
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Border>
        <Border BorderBrush="#546e7a"
                BorderThickness="2"
                Grid.Column="1">
            <StackPanel>
                <Button Content="保存系统参数"
                        Style="{DynamicResource ButtonStyle}" />
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10,10,30,10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="软件授权："
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <TextBox HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Width="420"
                                 Margin="2"
                                 Text="{Binding RootParam.SystemParam.AuthCode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="自动清除："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <ToggleButton Margin="2"
                                      ToolTip="自动清除开关"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding RootParam.SystemParam.AutoClearLog,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Width="80" />
                    </StackPanel>
                    <Rectangle Width="60" />
                    <StackPanel Margin="10"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <Label Width="80"
                               Content="清除天数："
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="#1b2755" />
                        <TextBox HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Width="150"
                                 Margin="2"
                                 Text="{Binding RootParam.SystemParam.AutoClearDay}" />
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
